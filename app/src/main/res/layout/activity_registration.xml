<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp"
    tools:context=".register.Registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#161405"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            tools:context=".LoginActivity">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/dlogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/loginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/logoImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="Library Id"
                android:textColorHint="@android:color/darker_gray"
                android:padding="10dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/loginText"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/hostelName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="Student Name"
                android:textColorHint="@android:color/darker_gray"
                android:padding="10dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/username"
                android:drawableLeft="@drawable/baseline_home_24"
                android:drawablePadding="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/emailId"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="Email ID"
                android:textColorHint="@android:color/darker_gray"
                android:padding="10dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:inputType="textEmailAddress"
                app:layout_constraintTop_toBottomOf="@id/hostelName"
                android:drawableLeft="@drawable/baseline_mail_24"
                android:drawablePadding="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="Father's Name"
                android:textColorHint="@android:color/darker_gray"
                android:padding="10dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@id/emailId"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="Password"
                android:textColorHint="@android:color/darker_gray"
                android:padding="10dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/password"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/contact"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="Contact"
                android:textColorHint="@android:color/darker_gray"
                android:padding="10dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@id/confirmPassword"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/room"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="Room Number"
                android:textColorHint="@android:color/darker_gray"
                android:padding="10dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@id/contact"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/regButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text="Register"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room"
                app:layout_constraintWidth_percent="0.8" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
