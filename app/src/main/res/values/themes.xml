<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hostel1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/title_green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@color/colorAccent</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:actionBarTabTextStyle">@color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/golden</item>
    </style>

    <style name="Theme.Hostel1" parent="Base.Theme.Hostel1" />

    <style name="Theme.Hostel1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hostel1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Hostel1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>